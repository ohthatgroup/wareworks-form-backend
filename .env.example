# Copy this file to .env.local and fill in your values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8888

# Google Services (optional - for Sheets integration)
GOOGLE_SHEETS_ID=your_google_sheets_id
GOOGLE_SERVICE_ACCOUNT_EMAIL=your_service_account_email
GOOGLE_PRIVATE_KEY=your_base64_encoded_private_key

# Email Configuration (optional)
GMAIL_USER=your_gmail_account@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password
HR_EMAIL=hr@wareworks.me
ADMIN_EMAIL=admin@wareworks.me

# Feature Flags
ENABLE_PDF_GENERATION=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_GOOGLE_SHEETS=true

# Security (production)
ALLOWED_ORIGINS=https://wareworks.me,https://apply.wareworks.me